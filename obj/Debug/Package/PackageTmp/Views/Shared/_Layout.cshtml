<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    
    <link rel='stylesheet' href='~/Scripts/fullcalendar-2.1.1/fullcalendar.css' />
    @*<script src='~/Scripts/fullcalendar-2.1.1/lib/jquery.min.js'></script>*@
    <script src='~/Scripts/fullcalendar-2.1.1/lib/moment.min.js'></script>
    <script src='~/Scripts/fullcalendar-2.1.1/fullcalendar.js'></script>
    
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Conference Room Day Schedule Viewer", "DayView", "Calendar", new { area = "" }, new { @class = "navbar-brand", id = "dv" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("View Month/Week", "index", "Calendar", new { area = "" }, new { id = "vmw" })</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { id = "admin"})</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, new { id = "api"})</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SPR Companies</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
    <script>


        highlight();

        function highlight() {

            var _url = window.location.href.toString().split(window.location.host)[1];

            $("a*").removeClass('border');

            if (_url == "/") {
                $("#vmw").addClass('border');
            }
            if (_url == "/Calendar/DayView") {
                $("#dv").addClass('border');
            }
            if (_url == "/Admin") {
                $("#admin").addClass('border');
            }
            if (_url == "/Help") {
                $("#api").addClass('border');
            }

        }

    </script>
</body>
</html>

@model ConferenceRoomAPI.Models.DayView

@{
    string date = Model.Date;
    string mbx = Model.SelectedRoom;
    ViewBag.Title = "mDayView";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}

<div class="sprLogo" style="width:500px;margin-bottom:15px;">
    <img src="~/Content/Images/sprConsultingLogo.png" style="display: block;max-width: 60%;margin: 0 auto;" alt="" />
</div>

<div class="table" style="width:500px;margin-top:-5px;">
    <div class="table-row">
        <div class="table-cell">Conference Room</div>
        <div class="table-cell">@Html.DropDownListFor(x => x.SelectedRoom, Model.ConfRooms)</div>
        <div class="table-cell"><button id="refresh">Refresh</button></div>
    </div>
</div>


<div id="overlay">
    <div class="table" style="width:400px;">
        <div class="table-row">
            <div id="calendar"></div>
        </div>
    </div>
</div>


<div id="nav" style="width:400px;">
    <div class="row" style="width:100%;">
        <div class="col-xs-3"><button class="btn btn-sm btn-success" id="past">Prev</button></div>
        <div class="col-xs-6"><button id="room" class="btn btn-sm btn-success">Room Info.</button></div>
        <div class="col-xs-3 pull-right"><button class="btn btn-sm btn-success" id="future">Next</button></div>
    </div>
</div>



<br />

<script src="~/Scripts/conferenceroom.js"></script>
<script>

    init(@Html.Raw('"' + @date + '"'), @Html.Raw('"' + @mbx + '"'));

</script>
